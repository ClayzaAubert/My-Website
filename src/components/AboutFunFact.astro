---
export interface Props {
	value: string;
    time: string;
	text: string;
}

const { value, time, text } = Astro.props;
---
<div class="col-lg-3 col-md-6">
    <div class="funfacts-box">
        <h3 class="counter" data-to={value} data-time={time}>0</h3>
        <p class="fun-text">
            {text}
            <slot/>
        </p>
    </div>
</div>